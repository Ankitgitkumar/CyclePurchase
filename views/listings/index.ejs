<% layout("/layouts/boilerplate") %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .tax-toogle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 1rem;
        display: flex;
        align-items: center;
    }

    @media (max-width: 600px) {
        #filters {
            flex-wrap: nowrap;
        }

        .tax-toogle {
            min-width: 170px;
        }
    }
</style>

<!-- Hero Section -->
<div class="hero-section mb-5">
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade slider" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <% for (let i = 0; i < 5; i++) { %>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" 
                    class="<%= i === 0 ? 'active' : '' %>" 
                    aria-current="<%= i === 0 ? 'true' : 'false' %>" 
                    aria-label="Slide <%= i + 1 %>"></button>
            <% } %>
        </div>
        <div class="carousel-inner slider">
            <div class="carousel-item active">
                <img src="../image6.png" class="d-block w-100" alt="image">
            </div>
            <div class="carousel-item">
                <img src="../image8.png" class="d-block w-100" alt="image">
            </div>
            <div class="carousel-item">
                <img src="../image6.png" class="d-block w-100" alt="image">
            </div>
            <div class="carousel-item">
                <img src="../image5.png" class="d-block w-100" alt="image">
            </div>
            <div class="carousel-item">
                <img src="../image4.png" class="d-block w-100" alt="image">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
        <div class="col mb-4">
            <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                <div class="card h-100 listing-card shadow-sm">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text">
                            â‚¹<%= listing.price %>
                            <span class="tax-info d-none">&nbsp;&nbsp;+18% GST</span>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>

<!-- Tax Toggle Script -->
<script>
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch?.addEventListener("click", () => {
        const taxInfoElements = document.querySelectorAll(".tax-info");
        taxInfoElements.forEach(el => {
            el.classList.toggle("d-none");
            el.classList.toggle("d-inline");
        });
    });
</script>
